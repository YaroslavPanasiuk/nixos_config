    { device = "/dev/disk/by-uuid/f362b87d-c5b2-476d-9170-66aaaf33eb8e";
      fsType = "ext4";
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/FB7A-3119";
